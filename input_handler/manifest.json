{
  "name": "Content extension",
  "manifest_version": 2,
  "version": "1.0",
  "description": "Test input",
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Input handler",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "css": ["content.css"],
      "js": ["content.js", "js_lib/getCaretXYCoordinates.js"]
    }
  ],
  "permissions": [
    "tabs"
  ]
}